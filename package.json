{
  "name": "@as/root",
  "version": "0.0.1",
  "description": "Angular sandbox monorepo.",
  "type": "module",
  "packageManager": "npm@10.5.0",
  "engines": {
    "node": ">=18.20.0",
    "npm": ">=10.5.0"
  },
  "workspaces": [
    "apps/**",
    "packages/**",
    "tools/**"
  ],
  "scripts": {
    "build": "turbo build",
    "clean": "git clean -Xfd",
    "lint": "npm run lint.format -- --check && npm run lint.eslint",
    "lint.format": "prettier . --cache --ignore-path .lintignore",
    "lint.eslint": "eslint . --cache",
    "lint:fix": "npm run lint.format -- --write && npm run lint.eslint -- --fix",
    "start": "turbo start",
    "start:ssr": "turbo start:ssr",
    "test": "turbo test"
  },
  "dependencies": {
    "@angular/animations": "^18.2.0",
    "@angular/common": "^18.2.0",
    "@angular/compiler": "^18.2.0",
    "@angular/core": "^18.2.0",
    "@angular/forms": "^18.2.0",
    "@angular/platform-browser": "^18.2.0",
    "@angular/platform-browser-dynamic": "^18.2.0",
    "@angular/platform-server": "^18.2.0",
    "@angular/router": "^18.2.0",
    "@angular/ssr": "^18.2.1",
    "express": "^4.18.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.10"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.2.1",
    "@angular/cli": "^18.2.0",
    "@angular/compiler-cli": "^18.2.0",
    "@eslint/compat": "^1.1.1",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.5.0",
    "angular-eslint": "^18.3.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsdoc": "^50.2.2",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.1.3",
    "jest": "^29.7.0",
    "jest-preset-angular": "^14.2.2",
    "ng-packagr": "^18.2.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "turbo": "^2.0.14",
    "typescript": "~5.5.2",
    "typescript-eslint": "^8.2.0"
  }
}
